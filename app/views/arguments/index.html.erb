<p id="notice"><%= notice %></p>

<h1>Arguments</h1>

<table>
  <thead>
    <tr>
      <th>Theorem</th>
      <th>Title</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @arguments.each do |argument| %>
      <tr>
        <td><%= link_to argument.theorem.text, theorem_path(argument.theorem) %></td>
        <td><%= link_to argument.title, argument %></td>
        <td><%= argument.user.name %></td>
        <% if current_user && current_user.id == argument.user_id %>
          <td><%= link_to 'Destroy', argument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div>
<% if current_user %>
  <%= link_to 'New Theorem', new_theorem_path %> | <%= link_to "My Theorems", theorems_path + "?scope=user" %>
<% else %>
  <%= link_to "Theorems", theorems_path %>
<% end %>
</div>
